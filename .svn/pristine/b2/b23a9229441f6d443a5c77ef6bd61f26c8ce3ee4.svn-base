*{
	padding: 0;
	margin: 0;
	box-sizing: border-box;
}
body {
	font: bold 14px/1.45 "Helvetica Neue",Helvetica,Arial,"Hiragino Sans GB","Hiragino Sans GB W3","WenQuanYi Micro Hei",sans-serif;
	overflow-y: scroll;
}
a {
	text-decoration: none;
}
ul {
	list-style: none;
}
.label+.label {
	margin-left: 5px;
}
#header {
	padding: 0 20px;
	height: 50px;
	background: #666;
	box-shadow: 0 1px 5px 0px #ccc;
}
#logo {
	float: left;
	width: 50px;
	height: 100%;
	line-height: 50px;
	text-align: center;
	color: #fff;
}
#menu {
	float: right;
	height: 100%;
}
#menu>li {
	float: right;
	position: relative;
	padding: 8px 10px;
	height: 100%;
	line-height: 34px;
}
#menu>li a {
	display: block;
	height: 100%;
}
#menu>li>a {
	color: #AFD9EE;
}
#menu>li .menu_List {
	display: none;
	visibility: hidden;
	opacity: 0;
	position: absolute;
	right: 0;
	top: calc(100% - 5px);
	padding: 4px 0;
	border: 1px solid #dadada;
	border-radius: 4px;
	background: #fff;
	transition: all .35s;
	box-shadow: 0 4px 6px rgba(202,202,202,0.4);
	z-index: 100;
	transform: scale(0.8);
}
#menu>li .menu_List a{
	color: #333;
}
#menu>li .menu_List li {
	padding: 8px 10px;
	line-height: 1.4;
	white-space: nowrap;
}
#section {
	position: absolute;
	left: 0;
	top: 50px;
	right: 0;
	bottom: 0;
}
#main {
	width: 100%;
	min-height: 100%;
	display: table;
}
#slider,
#content {
	display: table-cell;
	vertical-align: top;
}
#slider {
	width: 200px;
	background: #FFFFFF;
	box-shadow: 1px 10px 5px 0px #ccc;
}
#slider a{
	color: 	#000000;
	display: block;
	padding: 8px 20px;
}
#content {
	padding: 20px;
}